		  <script>
				$(function(){
					$(".js_obn").click(function(){
						var code = $(this).attr("code");
						var userCode = $(this).attr("userCode");
						var bookName = $(this).attr("bookName");
						var getData={
        						   bookCode:code,
        						   userCode:userCode,
        						   bookName:bookName
    					};
						$.ajax
						({
							type:'get',
							url:'bookcompareadd',
							data:getData,
							dataType:'text',
							success:function(){
								alert("添加比较列表成功!");
								history.go(0);
							},
							error:function(){
								alert("添加比较列表失败,请检查登录状态!");
							}
						})
					})
					
				$(".js_bay").click(function(){
					var code = $(this).attr("code");
					var userCode = $(this).attr("userCode");
					var bookQuantity = 1;
					var getData={
							   bookCode:code,
							   userCode:userCode,
							   bookQuantity:bookQuantity
					};
					$.ajax
					({
						type:'get',
						url:'addShoppingCar',
						data:getData,
						dataType:'text',
						success:function(){
							alert("添加购物车成功!");
							history.go(0);
						},
						error:function(){
							alert("添加购物车失败,请检查登录状态!");
						}
					})
				})
				})
			</script>
	      
	      <div class="grid_product">
			
			#if(${bookInfoList} != "[]")
